{
  "name": "editorial-viewer",
  "version": "1.0.0",
  "description": "Mobile first preview of Guardian content.",
  "type": "module",
  "scripts": {
    "build": "npm run build:js && npm run build:css",
    "build:js": "tsc && vite build",
    "build:css": "sass ./public/styles/index.scss ./public/styles/index.css",
    "watch": "sass ./public/styles/index.scss ./public/styles/index.css --watch & ./public/styles/ & vite build --watch"
  },
  "devDependencies": {
    "@types/node": "^24.7.1",
    "sass": "^1.93.2",
    "typescript": "~5.9.3",
    "vite": "npm:rolldown-vite@7.1.14"
  },
  "dependencies": {
    "localforage": "^1.10.0"
  },
  "overrides": {
    "vite": "npm:rolldown-vite@7.1.14"
  }
}
